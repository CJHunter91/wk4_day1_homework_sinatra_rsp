<% 
game = RockPaperScissors.new(params[:player1], params[:player2]) 
game_string = game.play

if game_string.include?(params[:player1].capitalize)
  player = "Player 1 "
elsif game_string.include?(params[:player2].capitalize)
  player = "Player 2 "
else
  player = "No one wins! "
end
%>


<h1>Game between <%=params[:player1] + " and " + params[:player2]%></h1>

<h2><%= player + game_string %></h2>